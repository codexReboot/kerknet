		"psalms",
		"skriflesing",
		"geloofsbelydenis",
		"wet",
		"prediking",
		"ere diens",
		"worship-tools",
		"slide-generator"
	],
	"author": "Schalk van Dyk",
	"license": "ISC",
	"dependencies": {
		"babel-plugin-transform-inline-environment-variables": "^0.4.4",
		"bcrypt": "^6.0.0",
