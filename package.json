{
	"name": "dopper_multimedia_skepper",
	"version": "1.0.0",
	"type": "module",
	"description": "A multimedia slide generator for Reformed worship services. Built with Express.js, Dopper MMS helps churches easily create sermon slides, including scripture readings, psalms, confessions, and liturgical transitions â€” all from structured inputs.",
	"main": "src/index.js",
	"scripts": {
		"start-server": "node src/index.js",
		"sass": "sass --watch sass/main.scss:public/css/style.css",
		"server": "nodemon src/index.js --watch src --ext js,ejs",
		"browser-sync": "node bs.js",
		"dev": "npm-run-all --parallel server sass browser-sync",
		"open": "google-chrome http://localhost:3000 &",
		"start": "npm-run-all --parallel dev open",
		"clean": "rm -rf dist",
		"build": "npm run clean && babel src --out-dir dist && node scripts/build.js"
	},
	"keywords": [
		"dopper",
		"multimedia",
		"church",
		"reformed",
		"worship",
		"slides",
